{
  "private": true,
  "scripts": {
    "build": "yarn build:sw && yarn build:worker",
    "build:sw": "webpack --config webpack.sw.config.js && workbox injectManifest workbox-config.js",
    "build:worker": "wrangler build",
    "deploy": "./deploy.sh",
    "fmt": "prettier --write './**/*.{css,js,json,md,ts,yaml,yml}'",
    "fmt:check": "prettier -c './**/*.{css,js,json,md,ts,yaml,yml}'",
    "watch": "run-p watch:*",
    "watch:sw": "webpack --config webpack.sw.config.js --watch",
    "watch:worker": "wrangler preview --watch"
  },
  "prettier": {
    "bracketSpacing": false,
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@cloudflare/kv-asset-handler": "^0.0.7",
    "@types/escape-html": "^0.0.20",
    "@types/workbox-sw": "^4.3.0",
    "clean-css-loader": "^2.0.0",
    "dataloader": "^2.0.0",
    "date-fns": "^2.8.1",
    "dotenv": "^8.2.0",
    "emoji-regex": "^8.0.0",
    "escape-html": "^1.0.3",
    "feed": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "raw-loader": "^4.0.0",
    "ts-loader": "^6.2.1",
    "types-cloudflare-worker": "^1.1.0",
    "typescript": "^3.7.4",
    "url-loader": "^3.0.0",
    "webpack": "^4.41.4",
    "webpack-cli": "^3.3.10",
    "workbox-cli": "^4.3.1",
    "workbox-sw": "^4.3.1"
  }
}
