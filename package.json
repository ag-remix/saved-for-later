{
  "private": true,
  "scripts": {
    "build": "yarn build:static && yarn build:sw && yarn build:worker",
    "build:static": "ts-node -O '{\"module\": \"commonjs\"}' static-site/build.ts && webpack --config static-site/webpack.config.js",
    "build:sw": "workbox generateSW service-worker/workbox-config.js",
    "build:worker": "wrangler build",
    "deploy": "./deploy.sh",
    "fmt": "prettier --write './**/*.{css,js,json,md,ts,yaml,yml}'",
    "fmt:check": "prettier -c './**/*.{css,js,json,md,ts,yaml,yml}'"
  },
  "prettier": {
    "bracketSpacing": false,
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@cloudflare/kv-asset-handler": "^0.0.7",
    "@cloudflare/wrangler": "^1.7.0",
    "@types/escape-html": "^0.0.20",
    "@types/node": "^13.1.1",
    "@types/node-fetch": "^2.5.4",
    "dataloader": "^2.0.0",
    "date-fns": "^2.8.1",
    "dotenv": "^8.2.0",
    "emoji-regex": "^8.0.0",
    "escape-html": "^1.0.3",
    "feed": "^4.0.0",
    "node-fetch": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "types-cloudflare-worker": "^1.1.0",
    "typescript": "^3.7.4",
    "webpack": "^4.41.4",
    "webpack-cli": "^3.3.10",
    "workbox-cli": "^4.3.1"
  }
}
